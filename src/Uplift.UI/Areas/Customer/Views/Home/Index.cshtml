@model Uplift.Models.ViewModels.HomeViewModel

@foreach(var category in Model.CategoryList.OrderBy(o => o.DisplayOrder))
{
    @if(Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success"><b>@category.Name</b></h2>
                    <div class="col-12">
                        <div class="row my-3">
                            @foreach(var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card servicesCards">
                                        <div class="pl-2 pt-1 text-center pr-2">
                                            <h3 class="card-title text-dark">
                                                <b>@service.Name</b>
                                            </h3>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <div class="pl-3 text-white font-weight-bold">Preço por Serviço</div>
                                            <div class="pl-3 text-danger font-weight-bolder h5">@service.Price.ToString("C0")</div>
                                        </div>
                                        <img src="@service.ImageUrl" class="card-img-top p-2 rounded" style="max-height: 200px;"/>
                                        <div class="text-dark font-weight-bold text-center pb-2">@service.Frequency.Name</div>
                                        <a asp-action="Details" class="btn btn-success" asp-route-id="@service.Id">Detalhes</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}