
@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Criar Nova Categoria
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ordem de Exibição</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/category.js"></script>
    <script>
        $(document).ready(function () {
            if ("@TempData["Upsert"]" == "Added") {
                toastr.success("Categoria adicionada com sucesso.")
            }
            if ("@TempData["Upsert"]" == "Updated") {
                toastr.success("Categoria atualizada com sucesso.")
            }
            if ("@TempData["Upsert"]" == "Error") {
                toastr.error("Erro ao cadastrar/atualizar a categoria.")
            }
        });
    </script>
}
