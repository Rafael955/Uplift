
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Serviços</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Criar Novo Serviço
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Nome do Serviço</th>
                <th>Categoria</th>
                <th>Preço</th>
                <th>Frequência</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/service.js"></script>
    <script>
        $(document).ready(function () {
            if ("@TempData["Upsert"]" == "Added") {
                toastr.success("Serviço adicionada com sucesso.")
            }
            if ("@TempData["Upsert"]" == "Updated") {
                toastr.success("Serviço atualizada com sucesso.")
            }
            if ("@TempData["Upsert"]" == "Error") {
                toastr.error("Erro ao cadastrar/atualizar o serviço.")
            }
        });
    </script>
}


